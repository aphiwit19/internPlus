rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function signedIn() {
      return request.auth != null;
    }

    function myUserDoc() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid));
    }

    function myRoles() {
      return signedIn() ? (myUserDoc().data.roles != null ? myUserDoc().data.roles : []) : [];
    }

    function hasRole(role) {
      return signedIn() && myRoles().hasAny([role]);
    }

    function isHrAdmin() {
      return hasRole('HR_ADMIN');
    }

    function isSupervisor() {
      return hasRole('SUPERVISOR');
    }

    function isSelf(uid) {
      return signedIn() && request.auth.uid == uid;
    }

    function isAssignedSupervisorOf(uid) {
      return isSupervisor() && resource.data.supervisorId == request.auth.uid;
    }

    match /users/{uid} {
      allow read: if isSelf(uid) || isHrAdmin() || isAssignedSupervisorOf(uid);
      allow create: if isSelf(uid);
      allow update: if isSelf(uid) || isHrAdmin() ||
        (
          isSupervisor() && resource.data.supervisorId == request.auth.uid &&
          request.resource.data.diff(resource.data).changedKeys().hasOnly([
            'supervisorPerformance',
            'supervisorSummary',
            'supervisorOverallComments',
            'supervisorWorkPerformanceComments',
            'supervisorMentorshipQualityRating',
            'supervisorProgramSatisfactionRating',
            'supervisorReviewedDate',
            'updatedAt'
          ])
        );
      allow delete: if isHrAdmin();
    }

    match /users/{uid}/{subCol}/{docId} {
      allow read: if isSelf(uid) || isHrAdmin() || (isSupervisor() && get(/databases/$(database)/documents/users/$(uid)).data.supervisorId == request.auth.uid);

      allow write: if isSelf(uid) || isHrAdmin() ||
        (
          isSupervisor() && get(/databases/$(database)/documents/users/$(uid)).data.supervisorId == request.auth.uid &&
          subCol in ['feedbackMilestones', 'assignmentProjects', 'personalProjects']
        );
    }

    match /certificateTemplates/{templateId} {
      allow read: if signedIn();
      allow write: if isHrAdmin();
    }

    match /certificateRequests/{requestId} {
      allow create: if signedIn() && request.resource.data.internId == request.auth.uid;
      allow read: if signedIn() && (
        resource.data.internId == request.auth.uid ||
        isHrAdmin() ||
        (isSupervisor() && resource.data.supervisorId == request.auth.uid)
      );

      allow update: if isHrAdmin() || (isSupervisor() && resource.data.supervisorId == request.auth.uid);
      allow delete: if isHrAdmin();
    }

    match /universityEvaluations/{docId} {
      allow create: if signedIn() && request.resource.data.internId == request.auth.uid;
      allow read: if signedIn() && (
        resource.data.internId == request.auth.uid ||
        isHrAdmin() ||
        (isSupervisor() && resource.data.supervisorId == request.auth.uid)
      );
      allow update: if isHrAdmin() ||
        (signedIn() && resource.data.internId == request.auth.uid) ||
        (isSupervisor() && resource.data.supervisorId == request.auth.uid);
      allow delete: if isHrAdmin();
    }

    match /leaveRequests/{id} {
      allow read, write: if signedIn();
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
