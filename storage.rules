rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function signedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return signedIn() && request.auth.token.admin == true;
    }

    match /templates/{allPaths=**} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /certificateTemplates/{allPaths=**} {
      allow read: if signedIn();
      allow write: if isAdmin();
    }

    match /certificates/{internId}/{allPaths=**} {
      allow read: if signedIn() && (request.auth.uid == internId || isAdmin());
      allow write: if isAdmin();
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
